<!DOCTYPE html>
<html>
  <head>
    <title>Structured Content </title>
   <link href="~/Styles/Site.css" rel="stylesheet" type="text/css" />
  </head>
    
    
  <body >
    <header style="background-color:#FFA319;max-width: 960px;">@RenderPage("~/Views/Shared/_Header.cshtml")</header>
    <div style="max-width: 960px; max-height:450px; overflow: hidden;">
        <div style="float:left;width:15%;height:450px; background-color:#d3d3d3; padding:5px 5px 5px 5px">
        <nav>
                        <ul style="font-size: 1.3em;font-family: 'Open Sans', sans-serif;border: 1px solid black";>
                            <li>@Html.ActionLink("Log in", "Login", "Account")</li>
                            <li>@Html.ActionLink("Register", "Register", "Account")</li>
                            <li>@Html.ActionLink("Search", "Search", "Home")</li>
                        </ul>
                    </nav>
            </div>
        <div style="overflow:scroll;max-height:450px;">
      @RenderBody()
            </div>
    </div>
    <footer style="background-color:#FFA319; height: 100px;max-width: 960px;">@RenderPage("~/Views/Shared/_Footer.cshtml")</footer>

       @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
  </body>
    
</html>
